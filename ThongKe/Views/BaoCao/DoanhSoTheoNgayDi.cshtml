                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="bg-yellow">Các đoàn chưa thanh lý:</td>
                                <td>@Html.Raw(Model.TourBaoCaoDtosTheoNgay.TongSKCacDoanChuaThanhLy.ToString("N0"))</td>
