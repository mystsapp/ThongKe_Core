                <table class="table mytable text-nowrap " id="listDoanhSoTheoNgayDi">
                    <thead>
                        <tr class="table-info">
                            <th>Sgtcode</th>
                            <th>Ngày đi</th>
                            <th>Ngày về</th>
                            <th>Tuyến tham quan</th>
                            <th>Số khách</th>
                            <th>Doanh số</th>
                            <th>Sales</th>
                            <th>Tên công ty / Khách hàng</th>
                            <th>Loại tour</th>
                            <th>Nguồn tour</th>
                            <th>Ngày tạo</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TourTheoNgay_IB != null)
                        {
                            @foreach (var item in Model.TourTheoNgay_IB.TourIBDTOs)
                            {

                                <tr class="cursor-pointer ">

                                    @switch (item.TrangThai)
                                    {

                                        case "0":
                                            <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                            break;
                                        case "1":
                                            <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                            break;
                                        case "2":
                                            <td class="tdVal bg-yellow" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                            break;
                                        case "3":
                                            <td class="tdVal " style="background-color: chartreuse" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                            break;
                                        case "4":
                                            <td class="tdVal bg-red" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                            break;
                                    }

                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayDen.ToString("dd/MM/yyyy"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayDi.ToString("dd/MM/yyyy"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.TuyenTQ)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw((item.SoKhachTT == 0) ? "0" : item.SoKhachTT.ToString("N0"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw((item.DoanhThuTT == 0) ? "0" : item.DoanhThuTT.ToString("N0"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.NguoiTao)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.CompanyId.CompanyName)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.TenLoaiTour)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.NguonTour)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayTao.ToString("dd/MM/yyyy"))</td>

                                </tr>

                            }
                            <tr class="cursor-pointer text-bold">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>Tổng Cộng:</td>
                                <td>@Html.Raw(Model.TourBaoCaoDtosTheoNgay.TongSK.ToString("N0"))</td>
                                <td>@Html.Raw(Model.TourBaoCaoDtosTheoNgay.TongDS.ToString("N0"))</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>

                            </tr>
                            <tr class="cursor-pointer text-bold">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td style="background-color: chartreuse">Các đoàn đã thanh lý:</td>
                                <td>@Html.Raw(Model.TourBaoCaoDtosTheoNgay.TongSKCacDoanDaThanhLy.ToString("N0"))</td>
                                <td>@Html.Raw(Model.TourBaoCaoDtosTheoNgay.TongDSCacDoanDaThanhLy.ToString("N0"))</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>

