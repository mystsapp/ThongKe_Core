@model BaoCaoViewModel

@{
    ViewData["Title"] = "DoanhSoTheoSale - Thống kê";
    int i = 1;
}

<!-- Main content -->
<section class="content pt-2">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">BÁO CÁO DOANH SỐ THEO SALES</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-2">

            <form autocomplete="off" id="frmDoanhSoTheoSale">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="container" style="padding-bottom:5px; background-color: aliceblue;" id="search">

                    <div class="col-md-12">
                        <div class="row" style="padding-top: 10px;">

                            <div class="col-md-3">
                                Từ ngày
                                <input class="form-control form-control-sm maskInput" name="searchFromDate" value="@ViewBag.searchFromDate" id="txtSearchFromDate" />
                            </div>

                            <div class="col-md-3">
                                Đến ngày
                                <input class="form-control form-control-sm maskInput" name="searchToDate" value="@ViewBag.searchToDate" id="txtSearchToDate" />
                            </div>

                            <div class="col-md-2">
                                Chi nhánh
                                @*<input class="form-control" name="searchString" value="@ViewBag.searchString" />*@
                                <select class="form-control form-control-sm" name="Macn"
                                        asp-items="@(new SelectList(Model.Dmchinhanhs, "Macn", "Macn", ViewBag.Macn))">
                                </select>
                            </div>
                            
                            <div class="col-md-2">
                                Khối
                                @*<input class="form-control" name="searchString" value="@ViewBag.searchString" />*@
                                <select class="form-control form-control-sm" name="khoi"
                                        asp-items="@(new SelectList(Model.Khois_KD, "Name", "Name", ViewBag.khoi))">
                                </select>
                            </div>

                            <div class="col-md-2">
                                <br />
                                <div class="btn-group btn-block">
                                    <button type="submit" class="btn btn-outline-primary btn-sm" id="btnSubmitSearch" formaction="/BaoCao/DoanhSoTheoSale" formmethod="get" title="Search"><i class="fas fa-search"></i></button>
                                    <button type="submit" class="btn btn-outline-success btn-sm" id="btnSubmitExcel" formaction="/BaoCao/DoanhSoTheoSaleExcel" formmethod="post" title="Export excel"><i class="fas fa-file-excel"></i></button>
                                    <button type="submit" class="btn btn-outline-warning btn-sm" id="btnSubmitExcelChart" formaction="/BaoCao/DoanhSoTheoSaleExcelChart" formmethod="post" title="Export excel chart"><i class="fas fa-chart-bar"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <br />
            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap tblTour" id="listDoanhSoTheoSale">
                    <thead>
                        <tr class="table-info">
                            @*<th>#</th>*@
                            @*<th>#</th>*@
                            <th>STT</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().Sgtcode)</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().CompanyName)</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().NgayDen)</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().NgayDi)</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().ChuDeTour)</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().TuyenTQ)</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().SoKhachDK)</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().DoanhThuDK)</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().SoKhachTT)</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().DoanhThuTT)</th>
                            <th>Sales</th>
                            <th>@Html.DisplayNameFor(m => m.TourIBDTOs.FirstOrDefault().NgayTao)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TourIBDtosGroupByNguoiTaos != null)
                        {
                            @foreach (var vm in Model.TourIBDtosGroupByNguoiTaos)
                            {
                                foreach (var item in vm.TourIBDTOs)
                                {

                                    <tr class="cursor-pointer ">
                                        <td>@i</td>
                                        @switch (item.TrangThai)
                                        {

                                            case "0":
                                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                                break;
                                            case "1":
                                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                                break;
                                            case "2":
                                                <td class="tdVal bg-yellow" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                                break;
                                            case "3":
                                                <td class="tdVal " style="background-color: chartreuse" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                                break;
                                            case "4":
                                                <td class="tdVal bg-red" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                                break;
                                        }
                                        <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.CompanyName)</td>
                                        <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayDen.ToString("dd/MM/yyyy"))</td>
                                        <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayDi.ToString("dd/MM/yyyy"))</td>
                                        <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.ChuDeTour)</td>
                                        <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.TuyenTQ)</td>
                                        <td class="tdVal" data-id="@item.Id">@Html.Raw(item.SoKhachDK.ToString("N0"))</td>
                                        <td class="tdVal" data-id="@item.Id">@Html.Raw(item.DoanhThuDK.ToString("N0"))</td>
                                        <td class="tdVal" data-id="@item.Id">@Html.Raw(item.SoKhachTT.ToString("N0"))</td>
                                        <td class="tdVal" data-id="@item.Id">@Html.Raw(item.DoanhThuTT.ToString("N0"))</td>
                                        <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.NguoiTao)</td>
                                        <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayTao.ToString("dd/MM/yyyy"))</td>

                                    </tr>

                                    i++;

                                }
                                <tr class="cursor-pointer text-bold">
                                    <td></td>
                                    <td>Tổng Cộng:</td>
                                    <td>CHƯA THANH LÝ HỢP ĐỒNG:</td>
                                    <td>@Html.Raw(vm.TourIBDTOs.FirstOrDefault().ChuaThanhLyHopDong.ToString("N0"))</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr class="cursor-pointer text-bold">
                                    <td></td>
                                    <td></td>
                                    <td>ĐÃ THANH LÝ HỢP ĐỒNG:</td>
                                    <td>@Html.Raw(vm.TourIBDTOs.FirstOrDefault().DaThanhLyHopDong.ToString("N0"))</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr class="cursor-pointer text-bold">
                                    <td></td>
                                    <td></td>
                                    <td>TỔNG CỘNG THEO TỪNG SALE:</td>
                                    <td>@Html.Raw(vm.TourIBDTOs.FirstOrDefault().TongSoKhachTheoSale.ToString("N0"))</td>
                                    <td>@Html.Raw(vm.TourIBDTOs.FirstOrDefault().TongCongTheoTungSale.ToString("N0"))</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>

                            }
                            <tr class="cursor-pointer text-bold">
                                <td></td>
                                <td>Tổng Cộng:</td>
                                <td></td>
                                <td>@Html.Raw(Model.TongSK.ToString("N0"))</td>
                                <td>@Html.Raw(Model.TongCong.Value.ToString("N0"))</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>

                        }

                    </tbody>

                </table>
            </div>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

