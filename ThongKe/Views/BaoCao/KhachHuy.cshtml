@model KhachHuyViewModel


<!-- Main content -->
<section class="content pt-2">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title text-bold">THỐNG KÊ HỦY ĐOÀN</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-2">


            <form id="formSearch" autocomplete="off">
                @*<div class="p-4 border rounded">*@

                    <div class="form-group row">
                        
                        <div class="col-md-2">
                            Từ ngày
                            <input value="@ViewBag.searchFromDate" name="tungay" class="form-control form-control-sm maskInput" id="txtTuNgay" />
                        </div>

                        <div class="col-md-2">
                            Đến ngày
                            <input value="@ViewBag.searchToDate" name="denngay" class="form-control form-control-sm maskInput" id="txtDenNgay" />
                        </div>

                        <div class="col-md-2">
                            Chi nhánh
                            <select name="chiNhanh" class="form-control form-control-sm border-input ddlChiNhanh" id="ddlChiNhanh"
                                    asp-items="@(new SelectList(Model.ChiNhanhToReturnViewModels,"Name","Name", ViewBag.chiNhanh))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            Khối
                            <select class="form-control form-control-sm" id="ddlKhoi" name="khoi"
                                    asp-items="@(new SelectList(Model.KhoiViewModels_KL, "Name", "Name", ViewBag.khoi))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <br />
                            <span class="btn-group btn-block">
                                <button type="submit" id="btnSearch" class="btn btn-outline-primary btn-sm" formaction="/BaoCao/KhachHuy"><i class="fa fa-search"></i></button>
                                <button type="submit" id="btnExportAll1" class="btn btn-outline-success btn-sm" formmethod="post" formaction="/BaoCao/KhachHuyPost"><i class="fas fa-file-export"></i></button>
                            </span>
                        </div>

                    </div>


                @*</div>
*@
            </form>
            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap" id="listAll">
                    <thead>
                        <tr class="table-info">
                            <th>STT</th>
                            <th>Tên khách</th>
                            <th>Sgtcode</th>
                            <th>Vetourid</th>
                            <th>Tuyến tq</th>
                            
                            <th>Bắt đầu</th>
                            <th>Kết thúc</th>
                            <th>Giá tour</th>
                            <th>Người hủy vé</th>
                            <th>Đại lý hủy vé</th>
                            <th>Chi nhánh</th>
                            <th>Ngày hủy vé</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.KhachHuys != null)
                        {
                            @foreach (var item in Model.KhachHuys)
                            {
                        <tr>

                            <td>@Html.DisplayFor(m => item.stt)</td>
                            <td>@Html.DisplayFor(m => item.tenkhach)</td>
                            <td>@Html.DisplayFor(m => item.sgtcode)</td>
                            <td>@Html.DisplayFor(m => item.vetourid)</td>
                            <td>@Html.DisplayFor(m => item.tuyentq)</td>
                            <td>@Html.Raw(item.batdau.ToString("dd/MM/yyyy"))</td>
                            <td>@Html.Raw(item.ketthuc.ToString("dd/MM/yyyy"))</td>
                            @if (item.giatour.HasValue)
                            {
                                <td>@Html.Raw(item.giatour.Value.ToString("N0"))</td>
                            }
                            else
                            {
                                <td>0</td>
                            }
                            <td>@Html.DisplayFor(m => item.nguoihuyve)</td>
                            <td>@Html.DisplayFor(m => item.dailyhuyve)</td>
                            <td>@Html.DisplayFor(m => item.chinhanh)</td>
                            <td>@Html.Raw(item.ngayhuyve.ToString("dd/MM/yyyy"))</td>

                        </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->


@section Scripts{
    <script>

        //$(function () {
        //    $("#datepicker").datepicker({
        //        dateFormat: 'dd/mm/yy'
        //    });
        //});

        $('#listAll').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
        });
    </script>
}