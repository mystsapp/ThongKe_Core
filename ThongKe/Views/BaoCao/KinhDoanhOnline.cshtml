@model ThongKeWebViewModel

<!-- Main content -->
<section class="content pt-2">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title text-bold">BÁO CÁO DOANH THU ONLINE THEO NGÀY BÁN TOUR</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-2">


            <form id="formSearch" autocomplete="off">
                <div class="p-4 border rounded">

                    <div class="form-group row">
                        
                        <div class="col-md-2">
                            Từ ngày
                            <input value="@ViewBag.searchFromDate" name="tungay" class="form-control form-control-sm maskInput" id="txtTuNgay" />
                        </div>

                        <div class="col-md-2">
                            Đến ngày
                            <input value="@ViewBag.searchToDate" name="denngay" class="form-control form-control-sm maskInput" id="txtDenNgay" />
                        </div>

                        <div class="col-md-2">
                            Khối
                            <select class="form-control form-control-sm" id="ddlKhoi" name="khoi"
                                    asp-items="@(new SelectList(Model.KhoiViewModels_KL, "Name", "Name", ViewBag.khoi))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <br />
                            <span class="btn-group btn-block">
                                <button type="submit" id="btnSearch" class="btn btn-outline-primary btn-sm" formaction="/BaoCao/KinhDoanhOnline"><i class="fa fa-search"></i></button>
                            </span>
                        </div>

                    </div>


                </div>

            </form>
            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap" id="listAll">
                    <thead>
                        <tr class="table-info">
                            <th>#</th>
                            <th>Code CN</th>
                            <th>Tạo vé</th>
                            <th>Tự huỷ</th>
                            <th>Chưa xuất vé</th>
                            <th>Thành công</th>
                            <th>Huỷ</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Thongkewebs != null)
                        {
                            @foreach (var item in Model.Thongkewebs)
                            {
                                <tr>
                                    <td>

                                        <form id="frmDetail" asp-action="KinhDoanhOnlineChiTietToExcel">
                                            <input type="hidden" name="tungay" id="hidTuNgay" />
                                            <input type="hidden" name="denngay" id="hidDenNgay" />
                                            <input type="hidden" name="chinhanh" id="hidChiNhanh" />
                                            <input type="hidden" name="khoi" id="hidKhoi" />
                                            <button type="button" data-chinhanh="@item.Chinhanh" class="btn btn-outline-success btnExportDetail"><i class="fas fa-file-export"></i></button>
                                        </form>
                                    </td>
                                    <td>@Html.DisplayFor(m => item.Chinhanh)</td>
                                    <td>@Html.DisplayFor(m => item.Taove)</td>
                                    <td>@Html.DisplayFor(m => item.Tuhuy)</td>
                                    <td>@Html.DisplayFor(m => item.Chuaxuatve)</td>
                                    <td>@Html.DisplayFor(m => item.Thanhcong)</td>
                                    <td>@Html.DisplayFor(m => item.Huy)</td>

                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->


@section Scripts{
    <script>

        //$(function () {
        //    $("#datepicker").datepicker({
        //        dateFormat: 'dd/mm/yy'
        //    });
        //});

        $('#listAll').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
        });
    </script>
    <script src="~/Admin/KinhDoanhOnline/kinhDoanhOnlineController.js"></script>
}