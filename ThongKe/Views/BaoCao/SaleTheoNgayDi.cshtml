@model DoanhthuSaleQuayViewModel

<!-- Main content -->
<section class="content p-2">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title text-bold"> SALE THEO NGÀY ĐI</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-2">


            <form id="formSearch" autocomplete="off">
                <div class="container" style="padding-bottom:5px; background-color: aliceblue;" id="search">
                    <div class="col-md-12">
                        <div class="row" style="padding-top: 10px;">

                            <div class="col-md-2">
                                Từ ngày
                                <input value="@ViewBag.searchFromDate" name="tungay" class="form-control form-control-sm maskInput" id="txtTuNgay" />
                            </div>

                            <div class="col-md-2">
                                Đến ngày
                                <input value="@ViewBag.searchToDate" name="denngay" class="form-control form-control-sm maskInput" id="txtDenNgay" />
                            </div>

                            <div class="col-md-2">
                                Chi nhánh
                                <select name="chinhanh" class="form-control form-control-sm border-input ddlChiNhanh" id="ddlChiNhanh"
                                        asp-items="@(new SelectList(Model.chiNhanhToReturnViewModels,"Name","Name", ViewBag.chiNhanh))">
                                </select>
                            </div>

                            <div class="col-md-2">
                                Khối
                                <select class="form-control form-control-sm" id="ddlKhoi" name="khoi"
                                        asp-items="@(new SelectList(Model.KhoiViewModels_KL, "Name", "Name", ViewBag.khoi))">
                                </select>
                            </div>

                            <div class="col-md-2">
                                <br />
                                <span class="btn-group btn-block">
                                    <button type="submit" id="btnSearch" class="btn btn-outline-primary btn-sm" formaction="/BaoCao/SaleTheoNgayDi"><i class="fa fa-search"></i></button>
                                    <button type="submit" id="btnExportAll1" class="btn btn-outline-success btn-sm" formmethod="post" formaction="/BaoCao/SaleTheoNgayDiPost"><i class="fas fa-file-export"></i></button>
                                </span>
                            </div>

                        </div>
                    </div>

                </div>

            </form>
            <br />
            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap" id="listAll">
                    <thead>
                        <tr class="table-info">
                            <th>#</th>
                            <th>STT</th>
                            <th>Người xuất vé</th>
                            <th>Code CN</th>
                            <th>Tổng tiền</th>
                            <th>Doanh số</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.DoanhthuSaleQuays != null)
                        {
                            @foreach (var item in Model.DoanhthuSaleQuays)
                            {
                                <tr>
                                    <td>

                                        <form id="frmDetail" asp-action="SaleTheoNgayDiChiTietToExcel">
                                            <input type="hidden" name="tungay" id="hidTuNgay" value="@Model.TuNgay" />
                                            <input type="hidden" name="denngay" id="hidDenNgay" value="@Model.DenNgay" />
                                            <input type="hidden" name="nhanvien" id="hidNhanVien" value="@item.Nguoixuatve" />
                                            <input type="hidden" name="chinhanh" id="hidChiNhanh" value="@item.Chinhanh" />
                                            <input type="hidden" name="khoi" id="hidKhoi" value="@Model.Khoi" />
                                            <button type="submit" class="btn btn-outline-success btnExportDetail"><i class="fas fa-file-export"></i></button>

                                        </form>
                                    </td>
                                    <td>@Html.DisplayFor(m => item.Stt)</td>
                                    <td>@Html.DisplayFor(m => item.Nguoixuatve)</td>
                                    <td id="tdChiNhanh">@Html.DisplayFor(m => item.Chinhanh)</td>
                                    <td>@Html.Raw(item.Doanhso.Value.ToString("N0"))</td>
                                    <td>@Html.Raw(item.Thucthu.Value.ToString("N0"))</td>

                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>

