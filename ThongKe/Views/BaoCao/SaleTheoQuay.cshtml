@model DoanhthuSaleQuayViewModel
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sale theo ngày bán</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">BÁO CÁO DOANH THU SALES THEO NGÀY BÁN</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-search text-info"></i> Tìm Kiếm</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <form id="formSearch" autocomplete="off">
                <div class="p-4 border rounded">

                    <div class="form-group row">
                        
                        <div class="col-2">
                            Từ ngày
                            <input value="@ViewBag.searchFromDate" name="tungay" class="form-control maskInput" id="txtTuNgay" />
                        </div>

                        <div class="col-2">
                            Đến ngày
                            <input value="@ViewBag.searchToDate" name="denngay" class="form-control maskInput" id="txtDenNgay" />
                        </div>

                        <div class="col-2">
                            Chi nhánh
                            <select name="chiNhanh" class="form-control border-input ddlChiNhanh" id="ddlChiNhanh"
                                    asp-items="@(new SelectList(Model.chiNhanhToReturnViewModels,"Name","Name", ViewBag.chiNhanh))">
                            </select>
                        </div>

                        <div class="col-2">
                            Khối
                            <select class="form-control" id="ddlKhoi" name="khoi"
                                    asp-items="@(new SelectList(Model.KhoiViewModels_KL, "Name", "Name", ViewBag.khoi))">
                            </select>
                        </div>

                        <div class="col-2">
                            <br />
                            <span class="btn-group">
                                <button type="submit" id="btnSearch" class="btn btn-outline-primary" formaction="/BaoCao/SaleTheoQuay"><i class="fa fa-search"></i></button>
                                <button type="submit" id="btnExportAll1" class="btn btn-outline-success" formmethod="post" formaction="/BaoCao/SaleTheoQuayPost"><i class="fas fa-file-export"></i></button>
                            </span>
                        </div>

                    </div>


                </div>

            </form>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list-alt text-info"></i> Danh Sách</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap" id="listAll">
                    <thead>
                        <tr class="table-info">
                            <th>#</th>
                            <th>STT</th>
                            <th>Người xuất vé</th>
                            <th>Code CN</th>
                            <th>Tổng tiền</th>
                            <th>Doanh số</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.DoanhthuSaleQuays != null)
                        {
                            @foreach (var item in Model.DoanhthuSaleQuays)
                            {
                                <tr>
                                    <td>

                                        <form id="frmDetail" asp-action="SaleTheoQuayChiTietToExcel">
                                            <input type="hidden" name="tungay" id="hidTuNgay" value="@Model.TuNgay" />
                                            <input type="hidden" name="denngay" id="hidDenNgay" value="@Model.DenNgay" />
                                            <input type="hidden" name="nhanvien" id="hidNhanVien" value="@item.Nguoixuatve" />
                                            <input type="hidden" name="chinhanh" id="hidChiNhanh" value="@item.Chinhanh" />
                                            <input type="hidden" name="khoi" id="hidKhoi" value="@Model.Khoi" />
                                            <button type="submit" class="btn btn-outline-success btnExportDetail"><i class="fas fa-file-export"></i></button>

                                        </form>
                                    </td>
                                    <td>@Html.DisplayFor(m => item.Stt)</td>
                                    <td>@Html.DisplayFor(m => item.Nguoixuatve)</td>
                                    <td id="tdChiNhanh">@Html.DisplayFor(m => item.Chinhanh)</td>
                                    <td>@Html.Raw(item.Doanhso.Value.ToString("N0"))</td>
                                    <td>@Html.Raw(item.Thucthu.Value.ToString("N0"))</td>

                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>


        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->




