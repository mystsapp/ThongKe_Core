@model TuyentqTheoQuyViewModel

<!-- Main content -->
<section class="content pt-2">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title text-bold">BÁO CÁO DOANH THU TUYẾN THAM QUAN THEO QUÝ</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-2">


            <form id="formSearch" autocomplete="off">
                @*<div class="p-4 border rounded">*@

                    <div class="form-group row">
                        
                        <div class="col-md-2">
                            Quý
                            <select name="quy" class="form-control form-control-sm border-input " id="ddlQuy"
                                    asp-items="@(new SelectList(Model.QuyViewModels,"Id","Name", ViewBag.quy))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            Năm
                            <input type="number" value="@ViewBag.nam" name="nam" class="form-control form-control-sm" id="txtNam" placeholder="Type year..." />
                        </div>

                        <div class="col-md-2">
                            Chi nhánh
                            <select name="chiNhanh" class="form-control form-control-sm border-input ddlChiNhanh" id="ddlChiNhanh"
                                    asp-items="@(new SelectList(Model.ChiNhanhToReturnViewModels,"Name","Name", ViewBag.chiNhanh))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            Khối
                            <select class="form-control form-control-sm" id="ddlKhoi" name="khoi"
                                    asp-items="@(new SelectList(Model.KhoiViewModels_KL, "Name", "Name", ViewBag.khoi))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <br />
                            <span class="btn-group btn-block">
                                @*<button type="submit" id="btnSearch" class="btn btn-outline-primary" formaction="/BaoCao/SaleTheoQuay"><i class="fa fa-search"></i></button>*@
                                <button type="submit" id="btnExportAll1" class="btn btn-outline-success btn-sm" formmethod="post" formaction="/BaoCao/TuyentqTheoQuyPost"><i class="fas fa-file-export"></i></button>
                            </span>
                        </div>

                    </div>


                @*</div>
*@
            </form>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
