@using Microsoft.AspNetCore.Http
@using ThongKe.Helps
@inject IHttpContextAccessor HttpContextAccessor

@{
    var user = HttpContextAccessor.HttpContext.Session.Get<Users>("loginUser");
}

<ul class="navbar-nav ml-auto">

    <li class="nav-item dropdown">

        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user">Welcome - @(user.Hoten + " - " + user.Chinhanh)!</i>
        </a>

        <div class="dropdown-menu dropdown-menu-right " aria-labelledby="navbarDropdownMenuLink">
            <div class="container">
                <a asp-controller="Login" asp-action="changepass" asp-route-strUrl="@Url.RouteUrl(ViewContext.RouteData.Values)" class="dropdown-item">Change password</a>
                <a asp-controller="Login" asp-action="logout" class="dropdown-item">Logout</a>

            </div>
        </div>
    </li>

</ul>