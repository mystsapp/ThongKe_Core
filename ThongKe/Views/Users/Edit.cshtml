@model UserViewModel

@{
    ViewData["Title"] = "Edit user";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập Nhật</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh Sách User</a></li>
                    <li class="breadcrumb-item active">Cập Nhật User - @Model.User.Username</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-edit text-info"></i> Cập Nhật User - @Model.User.Username</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <form method="post" autocomplete="off" enctype="multipart/form-data">
                <div class="p-4 border rounded">

                    <input type="hidden" asp-for="OldPass" value="@Model.User.Password" />
                    <input type="hidden" asp-for="User.Password" />
                    <input type="hidden" asp-for="User.Username" />
                    <input type="hidden" asp-for="User.Nhom" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="User.Username"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="User.Username" readonly />
                            <span class="text-danger" asp-validation-for="User.Username"></span>
                        </div>

                        <div class="col-2">
                            <label asp-for="User.Hoten"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="User.Hoten" />
                            <span class="text-danger" asp-validation-for="User.Hoten"></span>
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="User.Password"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="PassToEdit" />
                            <span class="text-danger" asp-validation-for="PassToEdit"></span>
                        </div>

                        <div class="col-2">
                            <label asp-for="User.Daily"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="User.Daily" class="form-control border-input "
                                    asp-items="@(new SelectList(Model.Dmdailies,"Daily","Daily"))">
                            </select>
                            <span class="text-danger" asp-validation-for="User.Daily"></span>
                        </div>

                    </div>



                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="User.Chinhanh"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="User.Chinhanh" class="form-control border-input"
                                    asp-items="@(new SelectList(Model.Dmchinhanhs,"Macn","Macn"))">
                            </select>
                        </div>

                        <div class="col-2">
                            <label asp-for="User.Trangthai"></label>
                        </div>
                        <div class="col-4">
                            <input type="checkbox" asp-for="User.Trangthai" />
                        </div>



                    </div>

                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="User.Khoi"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="User.Khoi" class="form-control border-input "
                                    asp-items="@(new SelectList(Model.KhoiViewModels,"Name","Name"))">
                            </select>
                            <span class="text-danger" asp-validation-for="User.Khoi"></span>
                        </div>

                        <div class="col-2">
                            <label asp-for="User.RoleId"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="User.RoleId" class="form-control border-input " id="ddlRoleId"
                                    asp-items="@(new SelectList(Model.Roles,"Id","RoleName"))">
                            </select>
                            <span class="text-danger" asp-validation-for="User.RoleId"></span>
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="User.PhongBanQL"></label>
                        </div>
                        <div class="col-4">
                            <input type="hidden" asp-for="User.PhongBanQL" id="hidDdlPhongBanQL" />
                            <select class="phongBans select2-hidden-accessible" multiple="" data-placeholder="Chọn phòng ban" style="width: 100%;" data-select2-id="24" tabindex="-1" aria-hidden="true"
                                    asp-items="@(new SelectList(Model.PhongBans, "Maphong", "Maphong"))" id="ddlPhongBanQL">
                            </select>
                            <span class="text-danger" asp-validation-for="User.PhongBanQL"></span>
                        </div>

                        <div class="col-2">
                            <label asp-for="User.DaiLyQL"></label>
                        </div>
                        <div class="col-4">
                            <input type="hidden" asp-for="User.DaiLyQL" id="hidDdlDaiLyQL" />
                            <select class="daiLyQL select2-hidden-accessible" multiple="" data-placeholder="Chọn đại lý" style="width: 100%;" data-select2-id="23" tabindex="-1" aria-hidden="true"
                                    asp-items="@(new SelectList(Model.Dmdailies, "Id", "Daily"))" id="ddlDaiLyQL">
                            </select>
                            <span class="text-danger" asp-validation-for="User.DaiLyQL"></span>
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="User.PhongBanId"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="User.PhongBanId" class=" form-control"
                                    asp-items="@(new SelectList(Model.PhongBans, "Maphong", "Tenphong"))" id="ddlPhongBanId">
                            </select>
                            <span class="text-danger" asp-validation-for="User.PhongBanId"></span>
                        </div>

                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                        <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
                    </div>

                </div>
            </form>


        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

    <script>
        $(document).ready(function() {
            OnOffPhongBanQL();
        });

        // for phongBanQL edit
        var selectedValues = new Array();
        var phongBanQL = $('#hidDdlPhongBanQL').val();
        selectedValues = phongBanQL.split(',');
        $('#ddlPhongBanQL').val(selectedValues);
        // for phongBanQL edit
        debugger
        // for daiLyQL edit
        var selectedValuesDaiLy = new Array();
        var daiLyQL = $('#hidDdlDaiLyQL').val();
        selectedValuesDaiLy = daiLyQL.split(',');
        $('#ddlDaiLyQL').val(selectedValuesDaiLy);
        // for phongBanQL edit



        $('.phongBans').select2({

            theme: 'bootstrap4'
        });

        // gan'  qua hidden field / phongBanQL
        $('.phongBans').on('change', function() {
            phongBan = $(this).val();

            $('#hidDdlPhongBanQL').val(phongBan);

        });

        // ddlDaiLyQL
        $('#ddlDaiLyQL').select2({

            theme: 'bootstrap4'
        });

        // gan'  qua hidden field
        $('.daiLyQL').on('change', function() {
            daiLy = $(this).val();

            $('#hidDdlDaiLyQL').val(daiLy);

        });

        $('#ddlRoleId').change(function() {
            OnOffPhongBanQL();
        })

        function OnOffPhongBanQL() {
            debugger
            roleId = $('#ddlRoleId').val();
            if (roleId !== '9') // 9: users
            {
                $('#ddlPhongBanQL').attr('disabled', true);
            }
            else {
                $('#ddlPhongBanQL').attr('disabled', false);
            }
        }

    </script>
}

